import 'package:flutter/material.dart';

class SignupScreen extends StatelessWidget {
  const SignupScreen({super.key});

  // Widget Pembantu untuk Input Field
  Widget _buildTextField({required String hint, required IconData icon, bool isPassword = false}) {
    return TextField(
      obscureText: isPassword,
      style: const TextStyle(color: Colors.white),
      decoration: InputDecoration(
        hintText: hint,
        prefixIcon: Icon(icon, color: Colors.white70),
        suffixIcon: isPassword ? const Icon(Icons.visibility_off, color: Colors.white70) : null,
      ),
    );
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: SingleChildScrollView(
        child: Stack(
          children: [
            // Background Image dengan Overlay
            Container(
              height: MediaQuery.of(context).size.height,
              width: MediaQuery.of(context).size.width,
              decoration: BoxDecoration(
                image: const DecorationImage(
                  // Ganti dengan asset image bioskop Anda
                  image: NetworkImage('https://picsum.photos/800/1200?blur=5'),
                  fit: BoxFit.cover,
                  colorFilter: ColorFilter.mode(Colors.black, BlendMode.dstATop),
                ),
                color: Colors.black.withOpacity(0.8),
              ),
            ),

            // Konten Utama
            Padding(
              padding: const EdgeInsets.symmetric(horizontal: 30.0, vertical: 60),
              child: Column(
                crossAxisAlignment: CrossAxisAlignment.start,
                children: <Widget>[
                  const SizedBox(height: 100),
                  const Text('Sign-up', style: TextStyle(color: Colors.white, fontSize: 40, fontWeight: FontWeight.bold)),
                  const Text("Let's get started", style: TextStyle(color: Colors.white70, fontSize: 18)),
                  const SizedBox(height: 50),

                  _buildTextField(hint: 'Your Full Name', icon: Icons.person),
                  const SizedBox(height: 20),
                  _buildTextField(hint: 'Email', icon: Icons.email),
                  const SizedBox(height: 20),
                  _buildTextField(hint: 'Password', icon: Icons.lock, isPassword: true),
                  const SizedBox(height: 20),
                  _buildTextField(hint: 'Confirm Password', icon: Icons.lock, isPassword: true),
                  const SizedBox(height: 40),

                  // Tombol Register
                  ElevatedButton(
                    onPressed: () {
                      // Logika pendaftaran
                    },
                    child: const Text('Register', style: TextStyle(fontSize: 18)),
                  ),

                  const SizedBox(height: 80),

                  // Opsi Login (Sudah punya akun?)
                  Center(
                    child: TextButton(
                      onPressed: () {
                        // Navigasi kembali ke Layar Login
                        Navigator.pop(context); 
                      },
                      child: const Text.rich(
                        TextSpan(
                          text: "Don't have an account? ", // Sesuai desain
                          style: TextStyle(color: Colors.white70),
                          children: [
                            TextSpan(
                              text: 'Register here', // Sesuai desain
                              style: TextStyle(color: Colors.blueAccent, fontWeight: FontWeight.bold),
                            ),
                          ],
                        ),
                      ),
                    ),
                  ),
                ],
              ),
            ),
          ],
        ),
      ),
    );
  }
}
